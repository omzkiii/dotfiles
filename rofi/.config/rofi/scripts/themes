#!/bin/bash

export PATH="${PATH}:${HOME}/.local/bin/"

dir="$HOME/.config/rofi/launchers/type-1"
theme='style-2'

themes=$HOME/Themes/
picked="$(ls $themes | rofi -dmenu -i -p "îˆ« Themes " -theme ${dir}/${theme}.rasi)"

for script in "$themes$picked"/*.sh; do
    if [ -f "$script" ]; then
        echo "Executing $script"
        bash "$script"
    fi
done
